<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    Article Title : <input type="text" id="title" name="article[title]" value="<%= @article.title %>"><br>
    Article Content : <input type="text" id="content" name="article[content]" value="<%= @article.content%>"><br>
    <input type="submit" id="submit" value="submit">
</form>